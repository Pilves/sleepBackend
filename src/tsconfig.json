{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
    "include": [
      "index.ts",
      "features/**/*",
      "shared/**/*",
      "infrastructure/**/*",
      "config/**/*"
    ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
